<%- include('../partials/header') %>

<div class="welcome-section">
  <h1>Welcome to Pinit</h1>
  <p>Discover and share new pins from the community!</p>
</div>

<div class="pins-grid">
  <% pins.forEach(pin => { %>
    <div class="pin">
      <a href="/uploads/<%= pin.imageUrl %>" download>
        <img 
          src="/uploads/<%= pin.imageUrl %>" 
          alt="<%= pin.title || 'Pin Image' %>" 
          class="pin-img" 
          loading="lazy"
        />
      </a>
      <div class="pin-content">
        <h3 class="pin-title" title="<%= pin.title %>"><%= pin.title %></h3>
        <div class="pin-user-info">
          <a href="/users/<%= pin.createdBy?._id %>" class="user-link">
            <img 
              src="/uploads/profiles/<%= pin.createdBy?.profilePic || 'default-avatar.png' %>" 
              class="user-avatar-small" 
              alt="User Avatar"
            />
            <span class="username"><%= pin.createdBy?.username || 'Unknown' %></span>
          </a>
        </div>
      </div>
    </div>
  <% }); %>
</div>

<%- include('../partials/footer') %>

<style>
  .welcome-section {
    text-align: center;
    margin: 40px auto;
    max-width: 800px;
    padding: 0 20px;
  }

  .welcome-section h1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 2.5rem;
    color: #e60023;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .welcome-section p {
    font-family: 'Open Sans', sans-serif;
    font-size: 1.2rem;
    color: #5f5f5f;
    margin-bottom: 30px;
  }

  .pins-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 25px;
    padding: 30px 40px;
    max-width: 1200px;
    margin: 0 auto 50px;
  }

  .pin {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out;
    position: relative;
  }

  .pin:hover {
    transform: scale(1.03);
  }

  .pin-img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }

  .pin-content {
    padding: 16px;
  }

  .pin-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
  }

  .pin-user-info {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .user-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #555;
  }

  .user-avatar-small {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    object-fit: cover;
    border: 1px solid #ddd;
  }

  .username {
    font-size: 14px;
  }
</style>
